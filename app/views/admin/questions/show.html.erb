<p id="notice"><%= notice %></p>

<h2><%= @question.body %></h2>

<p class="h4">Active: <%= @question.active.to_s %></p>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Option</th>
      <th>Correct</th>
    </tr>
  </thead>
  <tbody>
    <% @question.options.each_with_index do |option,i| %>
      <tr>
        <td><%= i +1 %></td>
        <td><%= option.body %></td>
        <td>
          <% if option.correct %>
            <span class="success-icon">
              <%= fa_icon "check-circle" %>
            </span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "#{ fa_icon "pencil-square-o" } Edit".html_safe, edit_admin_question_path(@question), class: 'btn btn-lg btn-warning' %> |
<%= link_to "#{ fa_icon "external-link" } Back".html_safe, admin_questions_path, class: 'btn btn-lg btn-default' %>
