<h1>Dashboard</h1>

<br>

<button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#myModal">
  Vorlage anlegen
</button>

<h2>Instructions</h2>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <td width="50">#</td>
      <td width="50">ID</td>
      <td>Active</td>
      <td>Title</td>
      <td>Body</td>
      <td>Category</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructions.each_with_index do |instruction,i| %>
      <tr>
        <td><%= (i + 1) %></td>
        <td><%= instruction.id %></td>
        <td><%= active_instance?(instruction.active) %></td>
        <td><%= instruction.title %></td>
        <td><%= instruction.body %></td>
        <td><%= Category.find(instruction.category_id).title %></td>
        <td width="30"><%= link_to 'Show', admin_instruction_path(instruction) %></td>
        <td width="30"><%= link_to 'Edit', edit_admin_instruction_path(instruction) %></td>
        <td width="30"><%= link_to 'Destroy', admin_instruction_path(instruction), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render 'modal' %>
