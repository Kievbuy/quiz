
<%= simple_form_for([:admin, @quiz], html: { class: 'form' }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-block">
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :level %>
      <%= f.input :answers_to_pass %>
      <%= f.input :percent_to_pass %>
      <%= f.input :active %>

      <div class="bordered">
        <p class="h4">Instructions:</p>
        <%= f.collection_check_boxes(:instruction_ids, Instruction.all, :id, :title) %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-lg btn-warning' %>
    </div>
  </div>
<% end %>
