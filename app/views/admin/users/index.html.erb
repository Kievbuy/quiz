<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th width="30">#</th>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Instructions</th>
      <th>Examinations (Passed/Pending/Failed)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each_with_index do |user,i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.instructions.count %></td>
        <td><%= "<span class='green'>#{user.examinations.passed.count}</span> / <span class='yellow'>#{user.examinations.pending.count}</span> / <span class='red'>#{user.examinations.failed.count}</span>".html_safe %></td>
        <td width="40"><%= link_to 'Show', admin_user_path(user) %></td>
        <td width="40"><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td width="40"><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

