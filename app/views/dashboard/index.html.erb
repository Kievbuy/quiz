<p id="notice"><%= notice %></p>

<h1>Dashboard: <%= @user.full_name %></h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Instruction</th>
      <th>Quiz</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @user.instructions.each_with_index do |instruction,i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= instruction.title %></td>
        <% if instruction.quizzes.present? %>
          <% @quiz = instruction.quizzes.active.last %>
          <td>
            <%= @quiz.title %>
          </td>
          <td>
            <%= @quiz.questions.joins(:options).last %>
          </td>
        <% else %>
            <td>Quiz absent or unactive</td>
        <% end %>
        <td>
          <div class="progress">
            <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
              <span class="sr-only">40% Complete (success)</span>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

